{
  "version": 8,
  "name": "Natural Earth",
  "id": "natural-earth",
  "metadata": {
    "mapbox:autocomposite": false,
    "mapbox:type": "template",
    "maputnik:renderer": "mbgljs",
    "openmaptiles:version": "3.x"
  },
  "sources": {
    "naturalearth": {
      "type": "vector",
      "url": "http://localhost:8081/data/natural_earth.json"
    },
    "relief": {
        "tiles": [
            "http://naturalearthtiles.lukasmartinelli.ch/tiles/natural_earth_2_shaded_relief.raster/{z}/{x}/{y}.png"
        ],
        "type": "raster",
        "tileSize": 256,
        "maxzoom": 6
    }
  },
  "sprite": "http://localhost:8081/styles/osm-bright/sprite",
  "glyphs": "http://localhost:8081/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "fondo",
      "type": "background",
      "paint": {
        "background-color": "#F8F4F0"
      }
    },
    {
      "id": "terreno",
      "type": "raster",
      "source": "relief"
    },
    {
      "id": "oceanos",
      "type": "fill",
      "source": "naturalearth",
      "source-layer": "ocean",
      "paint": {
        "fill-color": "#a0c8f0"
      }
    },
    {
      "id": "costa",
      "type": "line",
      "source": "naturalearth",
      "source-layer": "coastline",
      "paint": {
        "line-color": "#4793E8"
      }
    },
    {
      "id": "rios",
      "type": "line",
      "source": "naturalearth",
      "source-layer": "rivers",
      "paint": {
        "line-color": "#4793E8"
      }
    },
    {
      "id": "lagos",
      "type": "fill",
      "source": "naturalearth",
      "source-layer": "lakes",
      "paint": {
        "fill-color": "#a0c8f0",
        "fill-outline-color": "#4793E8"
      }
    },
    {
      "id": "ferrocarril",
      "type": "line",
      "source": "naturalearth",
      "source-layer": "rail",
      "paint": {
        "line-color": "#707070"
      }
    },
    {
      "id": "ferrys",
      "type": "line",
      "source": "naturalearth",
      "source-layer": "roads",
      "filter": [
        "all",
        [
          "!=",
          "featurecla",
          "Road"
        ]
      ],
      "paint": {
        "line-color": "rgba(28, 53, 255, 1)",
        "line-dasharray": [
          0,
          2
        ]
      }
    },
    {
        "id": "carreteras",
        "type": "line",
        "source": "naturalearth",
        "source-layer": "roads",
        "filter": ["all", ["==", "featurecla", "Road"]],
        "paint": {
            "line-color": [
                "match", ["get", "type"],
                "Major Highway",     "rgba(20, 52, 232, 1)",
                "Secondary Highway", "rgba(206, 32, 79, 1)",
                "Road",              "rgba(49, 137, 52, 1)",
                "rgba(255, 204, 0, 1)"
            ],
            "line-width": 2
        }
    },
    {
        "id": "ciudades",
        "type": "symbol",
        "source": "naturalearth",
        "source-layer": "cities",
        "layout": {
            "text-field": "{NAME}",
            "text-anchor": "bottom",
            "text-offset": [0, -1],
            "text-size": [
                "step", ["zoom"],
                [
                  "case",
                  ["<", ["number", ["get", "SCALERANK"]], 3], 18,
                  0
                ], 5,
                [
                  "case",
                  ["<=", ["number",["get", "SCALERANK"]], 2], 20,
                  ["<=", ["number",["get", "SCALERANK"]], 5], 14,
                  10
                ], 8,
                [
                  "case",
                  ["<=", ["number",["get", "SCALERANK"]], 2], 24,
                  ["<=", ["number",["get", "SCALERANK"]], 5], 18,
                  14
                ]
            ]
        },
        "paint": {
            "text-halo-color": "rgba(253, 253, 253, 1)",
            "text-color": "rgba(16, 16, 16, 1)",
            "text-halo-width": 1.5
        }
    },
    {
        "id": "ciudades-circle",
        "type": "circle",
        "source": "naturalearth",
        "source-layer": "cities",
        "paint": {
            "circle-color": [
                "match", ["get", "ADM0CAP"],
                0, "#888",
                "#FFF"
            ],
            "circle-stroke-width": [
                "match", ["get", "ADM0CAP"],
                0, 1,
                2
            ],
            "circle-radius": ["-", 10, ["get", "SCALERANK"]]
        }
    },
    {
      "id": "aeropuertos",
      "type": "symbol",
      "source": "naturalearth",
      "source-layer": "airports",
      "layout": {
        "symbol-placement": "point",
        "icon-image": "airport_11"
      }
    }
  ]
}
